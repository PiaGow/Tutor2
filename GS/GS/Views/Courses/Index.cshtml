@model IEnumerable<GS.Models.Course>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NameCourse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Starttime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Endtime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Courseinformation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DayInWeek)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationUser.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subject.Namest)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeCourse.Timestart)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeCourse.Timeend)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameCourse)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Starttime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Endtime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Courseinformation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DayInWeek)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClassLink)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Idst)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Idtimece)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Idcs)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationUser.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Idce">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Idce">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Idce">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
