@model IEnumerable<GS.Models.Course>

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"] - My Classroom</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f9;
            overflow-x: hidden; /* Prevent horizontal scroll */
        }

        .navbar {
            background-color: #3c4043;
            color: white;
            padding: 10px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            .navbar a {
                color: white;
                text-decoration: none;
                margin: 0 10px;
            }

        .sidebar {
            position: fixed;
            top: 55px;
            left: 0;
            width: 250px;
            height: 100%;
            background-color: #3c4043;
            color: white;
            padding-top: 20px;
            transform: translateX(0);
            transition: transform 0.3s ease;
        }

            .sidebar.hidden {
                transform: translateX(-250px);
            }

            .sidebar a {
                color: white;
                text-decoration: none;
                display: block;
                padding: 10px 20px;
            }

                .sidebar a:hover {
                    background-color: #5f6368;
                }

        .main-content {
            padding: 20px;
            margin-left: 250px;
            transition: margin-left 0.3s ease;
        }

            .main-content.expanded {
                margin-left: 0;
            }

        .toggle-button {
            position: fixed;
            top: 55px;
            left: 250px;
            background-color: #3c4043;
            color: white;
            border: none;
            padding: 10px;
            cursor: pointer;
            transition: left 0.3s ease;
        }

            .toggle-button.collapsed {
                left: 0;
            }

        .course-list {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
        }

        .course-card {
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            width: calc(33.333% - 40px);
            margin-bottom: 20px;
            transition: transform 0.2s;
        }

            .course-card:hover {
                transform: translateY(-5px);
            }

        .course-title {
            font-size: 1.2em;
            margin-bottom: 10px;
        }

        .course-description {
            color: #757575;
        }
    </style>
</head>
<body>
    <div class="navbar">
        <div class="navbar-left">
            </div>
    </div>

    <div id="sidebar" class="sidebar">
        <a href="/">Trang Chủ</a>
        <a href="/mycourses/index">Khóa Học</a>
        <a href="/calendar">Calendar</a>
        <a href="/settings">Settings</a>
    </div>

    <button id="toggleButton" class="toggle-button" onclick="toggleSidebar()">☰</button>

    <div id="mainContent" class="main-content">
        <h1>Danh Sách Khóa Học</h1>
        <div class="course-list">
            @foreach (var course in Model)
            {
                    <div class="course-card" onclick="location.href='@Url.Action("Details", "Courses", new { id = course.Idce })'">
                        <div class="course-title">@course.NameCourse</div>
                    <div class="course-description">@course.ApplicationUser.FullName</div>
                   
                </div>
            }
        </div>
    </div>

    <script>
        function toggleSidebar() {
            var sidebar = document.getElementById("sidebar");
            var mainContent = document.getElementById("mainContent");
            var toggleButton = document.getElementById("toggleButton");

            if (sidebar.classList.contains("hidden")) {
                sidebar.classList.remove("hidden");
                mainContent.classList.remove("expanded");
                toggleButton.classList.remove("collapsed");
                toggleButton.textContent = "☰";
            } else {
                sidebar.classList.add("hidden");
                mainContent.classList.add("expanded");
                toggleButton.classList.add("collapsed");
                toggleButton.textContent = "☰";
            }
        }
    </script>
</body>
</html>
