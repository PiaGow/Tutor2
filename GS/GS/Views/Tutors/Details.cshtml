@model GS.Models.ApplicationUserDetailsViewModel

@{
    ViewData["Title"] = "User Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <!-- Right Section: User Details (7 parts) -->
        <div class="col-md-7">
            <div class="card">
                <div class="card-header">
                    <h2>Chi Tiết Gia Sư</h2>
                </div>
                <div class="card-body">
                    <h3>@Model.ApplicationUser.FullName</h3>
                    <dl class="row">
                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.ApplicationUser.Email</dd>

                        <dt class="col-sm-4">Phone Number</dt>
                        <dd class="col-sm-8">@Model.ApplicationUser.PhoneNumber</dd>

                        <dt class="col-sm-4">Address</dt>
                        <dd class="col-sm-8">@Model.ApplicationUser.Address</dd>

                        <dt class="col-sm-4">Age</dt>
                        <dd class="col-sm-8">@Model.ApplicationUser.Age</dd>

                        <dt class="col-sm-4">Sex</dt>
                        <dd class="col-sm-8">@Model.ApplicationUser.Sex</dd>

                        <dt class="col-sm-4">Credit Card Number</dt>
                        <dd class="col-sm-8">@Model.ApplicationUser.CreditCardNumber</dd>

                        <dt class="col-sm-4">ID Card</dt>
                        <dd class="col-sm-8">@Model.ApplicationUser.IDCard</dd>

                        <dt class="col-sm-4">ID Card Image</dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.ApplicationUser.IDCardImg))
                            {
                                <img src="@Model.ApplicationUser.IDCardImg" alt="ID Card Image" class="img-thumbnail" />
                            }
                            else
                            {
                                <p>No image available.</p>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>

        <!-- Left Section: User Courses (3 parts) -->
        <div class="col-md-5">
            <h2>Khóa Học Của Gia Sư</h2>
            @if (Model.Courses.Any())
            {
                <ul class="list-group">
                    @foreach (var course in Model.Courses)
                    {
                        <li class="list-group-item">
                            <h4>@course.NameCourse</h4>
                            <p>@course.Courseinformation</p>
                            <a href="@Url.Action("Details", "Course", new { id = course.Idce })" class="btn btn-primary">View Course</a>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p>No courses available.</p>
            }
        </div>
    </div>
</div>

<!-- Include Bootstrap CSS and JS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>