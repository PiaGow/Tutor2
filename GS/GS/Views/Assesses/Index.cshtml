@model IEnumerable<GS.Models.Assess>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeAS)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoleAS)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationUser)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeAS)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoleAS)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationUser.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdAS">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdAS">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdAS">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
