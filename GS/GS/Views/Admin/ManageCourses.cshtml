@model IEnumerable<GS.Models.Course>
@{
    ViewData["Title"] = "Quản Lý Khóa Học";
}

<h1>Manage Courses</h1>
@* <a href="@Url.Action("CreateCourse", "Admin")" class="btn btn-success mb-3">Create Course</a>
 *@<table class="table">
    <thead>
        <tr>
            <th>Course ID</th>
            <th>Course Name</th>
            <th>Start Time</th>
            <th>End Time</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Idce</td>
                <td>@course.NameCourse</td>
                <td>@(course.Starttime.HasValue ? course.Starttime.Value.ToString("d MMM yyyy") : "N/A")</td>
                <td>@(course.Endtime.HasValue ? course.Endtime.Value.ToString("d MMM yyyy") : "N/A")</td>
                <td>@course.Price.ToString("C")</td>
                <td>
                    <a href="@Url.Action("EditCourse", "Admin", new { id = course.Idce })" class="btn btn-warning btn-sm">Edit</a>
                    <a href="@Url.Action("DeleteCourse", "Admin", new { id = course.Idce })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this course?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
