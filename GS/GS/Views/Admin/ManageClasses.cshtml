@model IEnumerable<GS.Models.Class>

@{
    ViewData["Title"] = "Quản Lý Lớp Học";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        body {
            overflow-x: hidden;
        }

        #sidebar {
            width: 250px;
            height: 100%;
            position: fixed;
            top: 57px;
            left: -250px;
            background-color: #f8f9fa;
            transition: left 0.3s;
            z-index: 1000;
        }

            #sidebar.active {
                left: 0;
            }

        #sidebarToggle {
            position: fixed;
            top: 500px;
            left: 60px;
            z-index: 1100;
        }

        .content {
            margin-left: 20px;
            padding: 20px;
            transition: margin-left 0.3s;
        }

            .content.shifted {
                margin-left: 270px;
            }

        .nav-link {
            color: #000;
            transition: background-color 0.3s, color 0.3s;
        }

            .nav-link:hover {
                background-color: #007bff;
                color: #fff;
            }

            .nav-link:active {
                background-color: #0056b3;
                color: #fff;
            }
    </style>
</head>
<body>

    <button class="btn btn-primary" id="sidebarToggle">☰</button>

    <div class="sidebar" id="sidebar">
        <div class="sidebar-header p-3">
            <h3>Menu</h3>
        </div>
        <nav class="nav flex-column">
            <a class="nav-link p-3" href="/">Home</a>
            <a class="nav-link p-3" href="/Revenue/RevenueComparison">Doanh Thu</a>
            <a class="nav-link p-3" href="/Admin/ManageClasses">Quản Lý Lớp</a>
            <a class="nav-link p-3" href="/Admin/ManageSubjects">Quản Lý Môn Học</a>
            <a class="nav-link p-3" href="/Admin/ManageCourses">Quản Lý Khóa Học</a>
            <a class="nav-link p-3" href="/Admin/ManageUsers">Quản Lý User</a>
        </nav>
    </div>

    <div class="content" id="content">
        <h1>@ViewData["Title"]</h1>
        <a href="@Url.Action("CreateClass", "Admin")" class="btn btn-success mb-3">Create Class</a>
        <table class="table">
            <thead>
                <tr>
                    <th>Class ID</th>
                    <th>Class Name</th>
                    <th>Teacher</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var classItem in Model)
                {
                    <tr>
                        <td>@classItem.Idcs</td>
                        <td>@classItem.Name</td>
                        <td>
                            <a href="@Url.Action("EditClass", "Admin", new { id = classItem.Idcs })" class="btn btn-warning btn-sm">Edit</a>
                            <a href="@Url.Action("DeleteClass", "Admin", new { id = classItem.Idcs })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this class?')">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script>
        $(document).ready(function () {
            $('#sidebarToggle').on('click', function () {
                $('#sidebar').toggleClass('active');
                $('#content').toggleClass('shifted');
            });
        });
    </script>

</body>
</html>
