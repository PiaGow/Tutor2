@model GS.Models.Class

<h4>Class</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditClass" asp-route-returnUrl="@Url.Action("ManageClasses", "Admin")">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Idcs" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="@Url.Action("ManageClasses", "Admin")" class="btn btn-warning btn-sm">Quay Lại</a>
</div>
